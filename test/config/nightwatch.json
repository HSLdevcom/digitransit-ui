{
  "src_folders": ["test/"],
  "output_folder": "test_output",

  "selenium": {
    "start_process": true,
    "server_path": "test/binaries/selenium-server-standalone-2.53.0.jar",
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "",
      "webdriver.ie.driver": ""
    }
  },

  "test_runner": {
    "type": "mocha",
    "options": {
      "reporter": "list",
      "exitOnFailure": true
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "http://localhost:8000",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "test_output/screenshots/"
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "phantom": {
      "selenium_port": 4444,
      "selenium_host": "localhost",
        "desiredCapabilities": {
          "browserName": "phantomjs",
          "javascriptEnabled": true,
          "acceptSslCerts": true,
          "phantomjs.binary.path": "node_modules/phantomjs/bin/phantomjs"
        }
    },

    "bs-fx": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    },
    "bs-chrome": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    },
    "bs-ie": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "browser": "IE",
        "os": "WINDOWS",
        "os_version": "8",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    },
    "bs-android": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "browserName": "android",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    },
    "bs-iphone": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "browser": "iPhone",
        "device" : "iPhone 6",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "autoAcceptAlerts" : true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    }
  }
}
