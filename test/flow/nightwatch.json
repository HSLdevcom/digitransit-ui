{
  "src_folders": ["test/flow/tests/"],
  "output_folder": "test_output",

  "page_objects_path": "test/flow/page_object",
  "custom_commands_path": "test/flow/custom_commands",

  "selenium": {
    "start_process": true,
    "server_path": "test/flow/binaries/selenium-server-standalone-3.9.1.jar",
    "log_path": "",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./chromedriver",
      "webdriver.ie.driver": "",
      "webdriver.gecko.driver": "./geckodriver"
    }
  },


  "test_settings": {
    "default": {
      "launch_url": "http://localhost:8080/POS/-/lahellasi?mock",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "globals": {
        "pause_ms": 200,
        "itinerarySearchTimeout": 15000,
        "elementVisibleTimeout": 10000
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "test_output/screenshots/"
      },
      "desiredCapabilities": {
        "resolution": "1280x800",
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "firefox": {
      "launch_url": "http://localhost:8080/POS/-/lahellasi?mock",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "test_output/screenshots/"
      },
      "desiredCapabilities": {
        "resolution": "1280x800",
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chromedriver": {
      "selenium": {
        "start_process": false
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "test_output/screenshots/"
      },
      "launch_url": "http://localhost:8080/POS/-/lahellasi?mock",
      "selenium_port"  : 9515,
      "selenium_host"  : "localhost",
      "default_path_prefix" : "",

      "desiredCapabilities": {
          "resolution": "1280x800",
          "browserName": "chrome",
          "chromeOptions" : {
            "args" : ["--no-sandbox"]
          },
          "acceptSslCerts": true
        }
    },

    "chromedriver-mobile": {
      "selenium": {
        "start_process": false
      },
      "globals": {
        "itinerarySearchTimeout": 21000,
        "elementVisibleTimeout": 20000,
        "debug": false
      },
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": true,
        "path": "test_output/screenshots/"
      },
      "launch_url": "http://localhost:8080/POS/-/lahellasi?mock",
      "selenium_port"  : 9515,
      "selenium_host"  : "localhost",
      "default_path_prefix" : "",

      "desiredCapabilities": {
          "resolution": "1280x800",
          "browserName": "chrome",
          "chromeOptions" : {
            "args" : ["--no-sandbox","window-size=400,800"]
          },
          "acceptSslCerts": true
        }
    },

    "phantom": {
      "selenium_port": 4444,
      "selenium_host": "localhost",
        "desiredCapabilities": {
          "resolution": "1280x800",
          "browserName": "phantomjs",
          "javascriptEnabled": true,
          "acceptSslCerts": true,
          "phantomjs.binary.path": "node_modules/phantomjs/bin/phantomjs"
        }
    },

    "bs-fx": {
      "selenium_port": 80,
      "selenium_host": "hub.browserstack.com",
      "selenium": {
        "start_process": false
      },
      "desiredCapabilities": {
        "resolution": "1280x800",
        "browserName": "firefox",
        "version": 47,
        "os": "WINDOWS",
        "os_version": "10",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserstack.user": "${BROWSERSTACK_USER}",
        "browserstack.key": "${BROWSERSTACK_KEY}",
        "browserstack.local": true,
        "build": "${BROWSERSTACK_BUILD}"
      }
    },
    "bs-chrome": {
